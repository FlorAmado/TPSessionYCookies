<!DOCTYPE html>
<html lang="en">


<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- animate -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <!-- glider -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.css">
  <!-- lo más -->
  <link rel="stylesheet" href="/stylesheets/styles.css">

  <!-- fontawesome -->
  <script src="https://kit.fontawesome.com/3f21023fe6.js" crossorigin="anonymous"></script>
</head>

  <body class="home" >
    <!-- encabezado -->
 

      <!-- principal -->
      <% if (locals.fondo) { %>
      
        <main class="login__main">
        <div class="row mb-5">
            <div class="col-12 col-md-8 mx-auto">
                <div class="card shadow">
                    <div class="card-header">
                        <h5 class="card-title">Login de Usuario</h5>
                    </div>
                    <div class="card-body">
                        <form action="" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Nombre</label>
                                <input type="name" class="form-control" id="name" name="name">
                                <small class="text-danger ms-2"><%= locals.errors && errors.name ? errors.name.msg : null %></small>
                              </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Correo electrónico</label>
                                <input type="email" class="form-control" id="email" name="email">
                                <small class="text-danger ms-2"><%= locals.errors && errors.email ? errors.email.msg : null %></small>
                            </div>
                            <div class="mb-3">
                                <label for="number" class="form-label">Edad</label>
                                <input type="number" class="form-control" id="number" name="number">
                                <small class="text-danger ms-2"><%= locals.errors && errors.number ? errors.number.msg : null %></small>
                            </div>
                            <div class="mb-3">
                              <label for="color" class="form-label">Color</label>

                              <select name="color" id="color" class="form-select">
                                <option value="seleccionar" selected disabled>selecionar</option>
                                <option value="red">rojo</option>
                                <option value="blue">azul</option>
                                <option value="yellow">amarillo</option>
                                <option value="green">verde</option>
                              </select>
                              <small class="text-danger ms-2"><%= locals.errors && errors.color ? errors.color.msg : null %></small>
                            </div>
                              
                              <button type="submit" class="buttons buttons__primary">Ingresar </button>
                        </form>
                      
                    </div>
                </div>
            </div>
        </div>
      </main>
    <% }else{ %>
      <h1>Sesion abierta :D</h1>
    <% } %>

 <!-- bootstrap -->
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
 integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
 crossorigin="anonymous"></script>


  </body>

</html>